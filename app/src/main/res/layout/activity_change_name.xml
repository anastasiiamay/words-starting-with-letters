<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeNameActivity"
    android:padding="20dp"
    android:background="@color/isabelline">

    <android.widget.Button
        android:id="@+id/goBack"
        android:layout_width="64dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text=""
        android:textAlignment="textStart"
        android:fontFamily="@font/fontawesome"
        app:fontFamily="@font/fontawesome"
        android:padding="0dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <TextView android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:text="Изменить имя"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/info"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_below="@id/title"
        android:text="Введите имя, которое будут видеть Ваши друзья и другие пользователи. Вы всегда можете поменять его."
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_google_button"
        android:textSize="22sp"
        android:paddingTop="10dp"
        android:inputType="textCapWords"
        android:maxLength="50"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:hint="Введите имя пользователя"/>

    <android.widget.Button
        android:id="@+id/changeName"
        android:layout_below="@id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Сохранить"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        />

</RelativeLayout>