<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:padding="20dp"
    android:background="@color/isabelline">

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="icon image" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@id/img"
        android:text="Добро пожаловать!"/>

    <TextView
        android:id="@+id/welcome2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/welcome"
        android:text="Войдите в свой профиль, чтобы сохранить или восстановить прогресс"/>

    <android.widget.Button
        android:id="@+id/signInGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_google_button"
        android:text="Подключиться к Google"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:drawableStart="@drawable/ic_search"
        android:layout_marginTop="15dp"
        android:layout_below="@id/welcome2"/>

</RelativeLayout>